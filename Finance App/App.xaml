<Application
    x:Class="Assignment2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Assignment2"
    RequestedTheme="Dark">


    <Application.Resources>
        <SolidColorBrush x:Key="MyBrush" Color="AliceBlue" />
        <x:String x:Key="MyStrig">Static resource test</x:String>
        <Style TargetType="Button" x:Key="LightStyle">
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value=" 12"/>
            <Setter Property="Foreground" Value="LightBlue"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150" />
        </Style>
        <Style TargetType="Button" x:Key="DarkStyle">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value=" 12"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="150" />
        </Style>
    </Application.Resources>
</Application>
